<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/half_unit_dimen"
    tools:context="com.miniproject.a3rd.a3rdminiproject.MainActivity">

    <!--에디터-->
    <EditText
        android:id="@+id/add_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect"
        android:hint="@string/add_hint_name"
        android:inputType="text"
        android:padding="@dimen/edit_padding"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="0dp" />

    <EditText
        android:id="@+id/add_address"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_unit_dimen"
        android:background="@drawable/round_rect"
        android:hint="@string/add_hint_address"
        android:inputType="text"
        android:padding="@dimen/edit_padding"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_title" />

    <EditText
        android:id="@+id/add_phone"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_unit_dimen"
        android:background="@drawable/round_rect"
        android:hint="@string/add_hint_phone"
        android:inputType="phone"
        android:padding="@dimen/edit_padding"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_address" />

    <TextView
        android:id="@+id/add_content_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_dimen"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_phone"
        tools:text="@string/add_content_num_header" />

    <EditText
        android:id="@+id/add_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/half_unit_dimen"
        android:layout_marginTop="@dimen/small_dimen"
        android:background="@drawable/round_rect"
        android:gravity="top"
        android:hint="@string/add_hint_content"
        android:inputType="text|textMultiLine|textCapSentences"
        android:maxLength="@integer/content_max_length"
        android:padding="@dimen/edit_padding"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintBottom_toTopOf="@+id/add_bt_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_content_num" />


    <!--중앙 세로선-->
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!--버튼-->
    <Button
        android:id="@+id/add_bt_prev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_unit_dimen"
        android:layout_marginRight="@dimen/half_unit_dimen"
        android:background="@drawable/round_rect"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/unit_dimen"
        android:paddingTop="@dimen/unit_dimen"
        android:text="@string/previous"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline" />

    <Button
        android:id="@+id/add_bt_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_unit_dimen"
        android:layout_marginStart="@dimen/half_unit_dimen"
        android:background="@drawable/round_rect"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/unit_dimen"
        android:paddingTop="@dimen/unit_dimen"
        android:text="@string/next"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
